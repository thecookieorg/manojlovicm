<div class="container">
    <div class="jumbotron">
        <h1><%= image_tag 'rostilj.jpg', class: "img-rounded img-responsive", style: "width: 260px; margin: 0px auto;"%></h1>
        <div class="text-center">
            <p>Hi, I'm Marko. I make this &amp; I break things &amp; I make them again.</p>
            <p><small>Until I break them one more time.</small></p>
        </div>
        
    </div><!-- jumbotron -->
</div><!-- container-fluid -->
    
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <h3>From the blog</h3>
            <hr>
        </div><!-- col-md-6 col-md-offset-3 -->
    </div><!-- row -->
    
    <div class="row">
        <% @posts.each do |post| %>
            <div class="col-md-2" style="margin-bottom: 30px;">
                <%= image_tag post.post_image.thumb.url, class: "img-responsive", style: "margin-top: 27px;" %>
            </div>
            <div class="col-md-10" style="margin-bottom: 30px">
                <h2><%= link_to post.title, post %></h2>
                <p><%= post.short_description %></p>
                <%= link_to "Read More >", post, class: "btn btn-link" %>
                <hr>
            </div>
        <% end %>
        
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <p><%= link_to "Browse all posts", posts_path, class: "btn btn-success btn-lg" %></p>
        </div>
    </div>
</div><!-- container -->