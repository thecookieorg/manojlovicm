<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Marko Manojlovic [logo]</h1>
            <h3>Since 1984</h3>
        </div><!-- col-md-12 text-center -->
    </div><!-- row -->
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <hr>
        </div><!-- col-md-6 col-md-offset-3 -->
    </div><!-- row -->
    <div class="row">
        <div class="col-md-4">
            <h3>From the blog</h3>
        </div>
    </div>
    <div class="row">
        <% @posts.each do |post| %>
            <div class="col-md-4">
                <h4><%= post.title %></h4>
                <%= image_tag post.post_image.thumb.url, class: "img-responsive" %>
            </div>        
        <% end %>
        
    </div>
</div><!-- container -->