<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= link_to 'Edit', edit_post_path(@post) if user_signed_in? %>
      <h1><%= @post.title %></h1>
      <small>Category: <%= link_to @post.category.name, category_path(@post.category) %></small> | <small>Post created <%= time_ago_in_words(@post.created_at) %> ago</small>
      <hr>
      <%= image_tag @post.post_image.full.url, class: "img-responsive" %>
      <div style="margin-top: 70px">
        <p><%= @post.body.html_safe %></p>
      </div>
    </div><!-- col-md-10 -->
    <div class="col-md-2">
      <div class="well well-lg">
        <h3>Categories</h3>
      <% @categories.each do |category| %>
        <p><%= link_to category.name, category %></p>
      <% end %>
      </div>
    </div>
  </div>
</div>