<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'New Post', new_post_path, class: "btn btn-success" if user_signed_in? %>
      <h1>My blog.</h1>
    </div>
  </div>
  
  </div>
  <div class="container">
  <div class="row">
    <div class="col-md-10">
      <% @posts.each do |post| %>
      <div class="row" style="margin-bottom: 30px;">
        <div class="col-md-2">
          <%= image_tag post.post_image.thumb.url, class: "img-responsive", style: "margin-top: 27px;" %>    
        </div>
        <div class="col-md-10">
          <h2><%= link_to post.title, post %></h2>
          <small>Category: <%= link_to post.category.try(:name), post.category %> | <% if user_signed_in? %>
                                                                                      [ <%= link_to 'Edit', edit_post_path(post), class: "label label-warning" %>
                                                                                      <%= link_to 'Delete', post, method: :delete, class: "label label-danger", data: { confirm: 'Are you sure?' } %> ]
                                                                                    <% end %>
          </small>
          <hr>
          <p><%= post.short_description %></p>
          <%= link_to "Read More >", post, class: "btn btn-link" %>
        </div>
      </div>
      <hr>
    <% end %>
    </div>
    <div class="col-md-2">
      <div class="well well-lg">
        <h3>Categories</h3>
      <% @categories.each do |category| %>
        <p><%= link_to category.name, category %></p>
      <% end %>
      </div>
    </div><!-- col-md-2 -->
  </div><!-- row -->
  <div class="row" style="margin-top: 30px;">
    <div class="col-md-12 text-center">
      <%= will_paginate @posts, :page_links => false %>
    </div><!-- col-md-12 -->
  </div><!-- row -->
</div><!-- container -->


        





